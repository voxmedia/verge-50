<!doctype html>
<html>
  <head>
    <%= partial "partials/meta_tags", :locals => { :person => person ||= nil, :page => page ||= 'index' } %>
    <%= stylesheet_link_tag "styles" %>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript">window.jQuery || document.write('<script src="http://cdn3.sbnation.com/javascripts/vendor/jquery-1.10.2.min.vda41706.js"><\/script>');</script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js"></script>
    <script type="text/javascript">window._ || document.write('<script src="http://cdn1.sbnation.com/javascripts/vendor/underscore-1.5.2.min.vd22f881.js"><\/script>');</script>
    <script type="text/javascript" src="http://ox-d.sbnation.com/w/1.0/jstag"></script>
    <%= javascript_include_tag  "top" %>
    <script type="text/javascript">
     Verge.context = {
       url_prefix: "<%= url_prefix %>",
       app_name : "<%= app_name %>"
     };
    </script>
  </head>

  <body>
    <%= partial 'partials/header' %>

    <div class="hymnal-loading-zone" style="display:none;">
      <script type="text/javascript">
        // plop the thing here
        Vox.EditorialApps.Ads.render(Vox.EditorialApps.AdHelpers.AdUnitIds.VergeFishTank);

        $(document).on(Vox.EditorialApps.AdHelpers.Events.AdRequest, function(e,data){
          console.log("asking hymnal for ad",data);
          if(data.pagesSeen % 4 == 0) {
            var $html = $("<h1>Hello from Hymnal!</h1>");
            console.log("injecting something", $html);
            $(document).trigger(Vox.EditorialApps.AdHelpers.Events.AdResponseWithHTML, $html);
            console.log("made it back!");
          }
        });
      </script>
    </div>

    <div class="l-outer-wrap">
      <div class="l-inner-wrap">
        <%= partial 'partials/nav' %>
        <%= yield %>
      </div>
    </div>
  </body>
  <%= javascript_include_tag  "bottom" %>
  <%= partial "partials/analytics" %>
</html>