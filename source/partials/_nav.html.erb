<nav class="m-nav">
  <% data.categories.sort_by{ |c| c.category.position }.each do |c| %>
    <h2 class="m-nav__category"><%= c.category.name %></h2>
    <ol class="m-nav__list">
      <% data.people.find_all{ |p| p.category == c.category.name }.sort_by{ |p| p.sort_name }.each do |p| %>
        <li class="m-nav__list-item"><a href="<%= page_url(p.slug) %>" data-page="<%= p.slug %>"><%= p.name %></a></li>
      <% end %>
    </ol>
  <% end %>
</nav>
