<ol class="m-pages">
  <%= partial "partials/sections/cover" %>

  <%= partial "partials/sections/intro", :locals => { :page => data.content.pages.find{ |p| p.name == 'intro' } } %>

  <% data.content.people.sort_by{ |p| p.position }.each_with_index do |p, i| %>
    <%= partial "partials/sections/person", :locals => { :person => p } %>
  <% end %>

  <%= partial "partials/sections/full_list", :locals => { :page => data.content.pages.find{ |p| p.name == 'full-list' } } %>

  <%= partial "partials/sections/credits", :locals => { :page => data.content.pages.find{ |p| p.name == 'credits' } } %>

</ol>